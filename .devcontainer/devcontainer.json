y
{
    "name": "AASDK Development Environment (x64)",
    "build": {
        "dockerfile": "Dockerfile.x64",
        "args": {
            "TARGET_ARCH": "amd64"
        }
    },
    "workspaceFolder": "/workspace",
    
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools", 
                "ms-vscode.cpptools-extension-pack",
                "twxs.cmake",
                "ms-vscode.hexeditor",
                "ms-vscode.vscode-json",
                "redhat.vscode-yaml"
            ],
            "settings": {
                "cmake.configureOnOpen": true,
                "cmake.buildDirectory": "${workspaceFolder}/build-${config:cmake.buildType}",
                "cmake.configureArgs": [
                    "-DTARGET_ARCH=amd64"
                ],
                "cmake.defaultVariants": {
                    "buildType": {
                        "default": "debug",
                        "choices": {
                            "debug": {
                                "short": "Debug",
                                "long": "Emit debug information",
                                "buildType": "Debug"
                            },
                            "release": {
                                "short": "Release", 
                                "long": "Optimize generated code",
                                "buildType": "Release"
                            }
                        }
                    }
                },
                "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools"
            }
        }
    },
    
    "postCreateCommand": "bash .devcontainer/post-create.sh",
    
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt", "seccomp=unconfined"
    ],
    
    "containerEnv": {
        "TARGET_ARCH": "amd64"
    },
    
    "remoteUser": "vscode"
}
