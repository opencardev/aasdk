{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "command": "bash",
            "args": ["-c", "rm -rf build-release build-debug packages && cd protobuf && rm -rf build"],
            "type": "shell",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Clean aap_protobuf",
            "command": "bash",
            "args": ["-c", "cd protobuf && rm -rf build && rm -rf CMakeFiles && rm -f CMakeCache.txt"],
            "type": "shell",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Build Release",
            "command": "bash",
            "args": ["-c", "mkdir -p build-release && cd build-release && cmake -DCMAKE_BUILD_TYPE=Release ../ && make -j$(nproc)"],
            "type": "shell",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Debug",
            "command": "bash",
            "args": ["-c", "mkdir -p build-debug && cd build-debug && cmake -DCMAKE_BUILD_TYPE=Debug ../ && make -j$(nproc)"],
            "type": "shell",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Create Release DEB Packages",
            "command": "bash",
            "args": ["-c", "cd build-release && cpack --config CPackConfig.cmake && mkdir -p ../packages && mv *.deb ../packages/"],
            "type": "shell",
            "dependsOn": "Build Release",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Create Debug DEB Packages",
            "command": "bash",
            "args": ["-c", "cd build-debug && cpack --config CPackConfig.cmake && mkdir -p ../packages && mv *.deb ../packages/"],
            "type": "shell",
            "dependsOn": "Build Debug",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Create Source Package",
            "command": "bash",
            "args": ["-c", "cd build-release && cpack --config CPackSourceConfig.cmake && mkdir -p ../packages && mv *.tar.* ../packages/"],
            "type": "shell",
            "dependsOn": "Build Release",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Build All Packages",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean",
                "Create Release DEB Packages",
                "Create Debug DEB Packages",
                "Create Source Package"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Install Release Package",
            "command": "bash",
            "args": ["-c", "cd packages && sudo dpkg -i *arm64_*.deb *arm64-dev_*.deb"],
            "type": "shell",
            "dependsOn": "Create Release DEB Packages",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Install Debug Package",
            "command": "bash",
            "args": ["-c", "cd packages && sudo dpkg -i *arm64-dbg_*.deb *arm64-dbg-dev_*.deb"],
            "type": "shell",
            "dependsOn": "Create Debug DEB Packages",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        }
    ]
}